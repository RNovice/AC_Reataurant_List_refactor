<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="搜尋餐廳、分類" aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
          <div class="blank-block"></div>
          <form action="">
            <select class="sort" name="sort" id="sort" onchange="this.form.submit()">
              <option value="volvo"> 名稱(中) </option>
              <option value="volvo"> 名稱(英) </option>
              <option value="saab">別類</option>
              <option value="mercedes">評分</option>
              <option value="audi">地區</option>
            </select>
          </form>
          <a class="UpDown" href=""><i class="fa-solid fa-up-long"></i></a>
          <a class="UpDown" href=""><i class="fa-solid fa-down-long"></i></a>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a>
          <div class="card mb-3 text-secondary">
            <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              </div>

              <div style="display:flex; justify-content:space-between; flex-wrap: wrap;">
                <span class="badge badge-pill badge-danger font-weight-normal mb-1">
                  {{ this.rating }}
                  <i class="fas fa-star fa-xs"></i>
                </span>

                <div style="display:flex;">
                  <a style="color:black;" class="pr-1" href="/restaurants/{{ this._id }}/edit">Edit</a>
                  <a style="color:black;" class="pr-1" href="/restaurants/{{ this._id }}">Detail</a>
                  <form action="./restaurants/{{ this._id }}?_method=DELETE" method="post">
                    <button type="submit" style="background-color:red; color:white; font-size:10px">Delete</button>
                  </form>
                  
                </div>
              </div>

            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>